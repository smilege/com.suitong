<%
const keyPrefix = angularAppName + '.'+ entityTranslationKey + '.';
const ngValidators = './ng_validators';
%>
<div class="panel ng-scope re-panel" ng-controller="<%= entityAngularName %>DetailController">
	<form class="form-horizontal form-inline">
        <div class="modal-header">
           <h4 class="modal-title" data-translate="<%= keyPrefix %>detail.title">Act Activity</h4>
        </div>
        <div class="modal-body">    
				 <%_ for (idx in fields) {
					const fieldName = fields[idx].fieldName;
					const fieldNameCapitalized = fields[idx].fieldNameCapitalized;
					const fieldNameHumanized = fields[idx].fieldNameHumanized;
					const fieldType = fields[idx].fieldType;
					const translationKey = keyPrefix + fieldName;
					_%>
				 <div class="col-sm-12 col-info">
						<div class="form-group m-n">
						<label class="col-no-pad control-label" data-translate="<%= translationKey %>"><%= fieldName %></label>
						<input type="text" class="form-control" disabled="true" ng-model="<%= entityInstance %>.<%= fieldName %>" />
					</div>
				</div>
				<%_ } _%>
			</div>
		<div class="modal-footer">
			<button type="button" ui-sref="app.<%= entityStateName%>" class="btn btn-primary btn-default" >
			<span class="glyphicon glyphicon-arrow-left"></span>&nbsp;<span data-translate="entity.action.back">Back</span>
			</button>
		</div>
	</form>
</div>
